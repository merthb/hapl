executable hapl
    main-is:          Main.hs
    ghc-options:
        -threaded

    -- Modules included in this executable, other than Main.
    other-modules:
        Graph
        Algorithm

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    build-depends:    
        base,
        haskell-src-exts-simple,
        filepath,
        astar,
        hashable,
        unordered-containers,
        parallel,
        directory,
        HUnit,
        deepseq,
        Glob
    hs-source-dirs:   src
    default-language: GHC2021

Test-Suite test-hapl
  type:                exitcode-stdio-1.0
  hs-source-dirs:
        tests,
        src
  default-language:    GHC2021
  main-is:             HAPL_tests.hs
  other-modules:       
        Graph, 
        Algorithm,
        Algorithm_tests,
        Graph_tests
  build-depends:
        base,
        haskell-src-exts-simple,
        filepath,
        astar,
        hashable,
